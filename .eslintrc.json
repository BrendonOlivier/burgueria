{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"   
    ],
    "rules": {
        "react-hooks/rules-of-hooks": "error",
        "no-unused-vars": "warn",
        "react-hooks/exhaustive-deps": "warn"
    }
}
